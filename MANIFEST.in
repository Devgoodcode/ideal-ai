# Include critical non-Python files in source distribution
include README.md
include LICENSE
include pyproject.toml

# CRITICAL: Include configuration file
include src/ideal_ai/config.json

# Include examples
recursive-include examples *.ipynb
recursive-include examples/assets *

# Exclude development and build artifacts
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.egg-info